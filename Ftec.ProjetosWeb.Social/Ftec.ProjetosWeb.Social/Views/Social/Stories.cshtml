@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stories - FTEC Social</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @@keyframes progress {
            from { width: 0%; }
            to { width: 100%; }
        }
        
        .story-progress {
            height: 2px;
            background-color: rgba(255, 255, 255, 0.3);
        }
        
        .story-progress-bar {
            height: 100%;
            background-color: white;
            animation: progress 5s linear forwards;
        }
        
        .story-container {
            aspect-ratio: 9/16;
            max-width: 100%;
            max-height: 100%;
            position: relative;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            overflow: hidden;
        }
        
        .story-view-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            width: 100vw;
            position: relative;
            background-color: #f8fafc;
            padding-top: 20px;
            padding-bottom: 20px;
        }
        
        .story-view {
            display: flex;
            height: calc(100% - 40px);
            width: 100%;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            scroll-behavior: smooth;
        }
        
        .story-slide {
            flex: 0 0 100%;
            scroll-snap-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            padding: 0 5px;
        }
        
        .story-content {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .story-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .story-gradient::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 20%;
            background: linear-gradient(to bottom, rgba(0,0,0,0.6), transparent);
            z-index: 1;
        }
        
        .story-header {
            transition: all 0.3s ease;
            color: white;
        }
        
        .story-close {
            transition: all 0.3s ease;
            color: white;
        }
        
        .story-close:hover {
            transform: scale(1.1);
        }
        
        .story-action {
            transition: all 0.3s ease;
            color: white;
        }
        
        .story-action:hover {
            transform: scale(1.1);
        }
        
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }
        
        .no-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        
        .comment-box {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            padding: 8px 15px;
            width: 80%;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .comment-input {
            background: transparent;
            border: none;
            outline: none;
            width: 80%;
            color: #333;
            font-size: 14px;
        }
        
        .send-button {
            color: #0095f6;
            font-weight: bold;
            font-size: 14px;
        }
        
        .like-button {
            background: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 10px;
        }
        
        .action-buttons {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }
        
        .nav-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 30;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .nav-button:hover {
            transform: translateY(-50%) scale(1.1);
        }
        
        .prev-button {
            left: 20px;
        }
        
        .next-button {
            right: 20px;
        }
    </style>
</head>
<body class="relative">
